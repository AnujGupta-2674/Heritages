<% layout('/layouts/boilerplate') -%>

    <div class="container mt-5">
        <form action="/signup" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Enter Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Username goes here"
                    required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Enter valid Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your Email"
                    required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Enter Password</label>
                <input type="password" class="form-control" id="password" name="password"
                    placeholder="Password goes here" required>
            </div>
            <button class="btn btn-primary offset-5 mb-3">Sign Up</button>
        </form>
    </div>